<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/header" android:background="#44ffffff" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/comment_return" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wb_return" android:layout_alignParentLeft="true" />
        <Button android:id="@id/comment_send" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wb_send" android:layout_alignParentRight="true" />
    </RelativeLayout>
    <ListView android:id="@id/comments_content" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_above="@id/bottom" android:layout_below="@id/header" />
    <RelativeLayout android:id="@id/bottom" android:background="#44ffffff" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <EditText android:id="@id/comment_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/comments_create_input_hint" android:layout_alignParentLeft="true" />
        <Button android:id="@id/comment_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/comments_create" android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>